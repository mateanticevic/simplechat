
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 panel panel-default">
        <h1>Register</h1>
        <hr/>
        <form style="margin: 5px;">
            <input id="input-nickname" class="form-control top-buffer" type="text" placeholder="Nickname" />
            <input id="input-email" class="form-control top-buffer" type="text" placeholder="Email" />
            <input id="input-password" class="form-control top-buffer" type="password" placeholder="Password" />
            <input id="input-password-repeat" class="form-control top-buffer" type="password" placeholder="Repeat password" />
            <button id="register-submit" class="btn btn-default navbar-btn top-buffer" onclick="return handler.clickRegister();">Register</button>
        </form>
    </div>
    <div class="col-lg-4">
        <div id="validation-nickname-free" class="alert alert-success" role="alert">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Nickname available
        </div>
        <div id="validation-nickname-taken" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Nickname is taken
        </div>
        <div id="validation-nickname-short" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Nickname should be at least 3 characters long
        </div>
        <div id="validation-email" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Enter a valid email address
        </div>
        <div id="validation-password" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Password has to be at least 6 characters long
        </div>
        <div id="validation-password-repeat" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Passwords don't match
        </div>
    </div>
</div>


@Scripts.Render("~/Scripts/Service/publicClient.js")
@Scripts.Render("~/Scripts/View/registerView.js")
@Scripts.Render("~/Scripts/Validation/registerValidation.js")